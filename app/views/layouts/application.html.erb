<!DOCTYPE html>
<html>
<head>
  <title>DigRentals</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
<div id='body-wrapper' class="container">
<header>
	<div id='header-normal' class='hidden-phone'>
		<%= link_to root_path, class: :logo do %>
			<div class='logo-icon'>
				Dig Rentals
			</div>
		<% end %>
		
		<div id="header-controls">
			<% if @listingAddress %>
			<span class="header-address">
				<h1><%= @listingAddress %></h1>
			</span>
			<% end %>
		</div>
	</div>
	
	<div id='header-mobile' class='visible-phone'>
		<%= link_to root_path, class: :logo do %>
			<div class='mobile-icon'>
				Dig Rentals
			</div>
		<% end %>
		
		<% if @listingAddress %>
		<%= link_to "http://maps.google.com/maps?q=" + Rack::Utils.escape(@listingAddress), class: "map-link" do %>
			<div class='map-icon'>
				Map
			</div>
		<% end %>
		
		<span class="header-address">
			<h1><%= @listingAddress %></h1>
		</span>
		
		
		
		<% end %>
	</div>
</header>

<div class="center-wrapper">
		<%= yield %>
	<div class="push"></div>
</div>

</div>
<footer>
	<div id="footer-normal" class="hidden-phone">
		<div class="footer-logo">
		</div>
		<div class="footer-text">
			<span>Â© Copyright 2012 Dig Rentals LLC</span>
			<a href="mailto:info@digrentals.com">info@digrentals.com</a>
		</div>
	</div>
	<div id="footer-mobile" class="visible-phone">
		<%= image_tag("footer-logo-mobile.png", size: "279x101") %>
	</div>
</footer>

</body>
<script>
	function scroll_to(element_id) {
		$('html, body').animate({
	         scrollTop: $(element_id).offset().top
	     }, 450);
	}
</script

</html>
