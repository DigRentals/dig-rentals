<h3>Sign up and we'll let you know when you can purchase our signs locally</h3>

<%= form_tag signup_path, :class=> "form pull-right inline" do %>
	 <% if flash[:error].present? %>
   	<span class="label label-important"><strong>Well shoot! </strong><%= flash[:error]%></span>
   <% end %>
   
   <% if flash[:notice].present? %>
   	<span class="label label-success"><strong>Sweet! </strong><%= flash[:notice]%></span>
   <% end %>
   
   <%= text_field_tag :email, nil, :class => 'text', :placeholder => 'Email' %>
   <%= text_field_tag :zip, nil, :class => 'text', :placeholder => 'Zip Code' %>
   <%= submit_tag "Sign Up", :class => "btn" %>
 <% end %>